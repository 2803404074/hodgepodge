<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="HotBinding">

        <variable
            name="newsitem"
            type="com.lsqidsd.hodgepodge.viewmodel.newsitemmodel.NewsItemModel"></variable>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            app:layout_constraintVertical_bias="0.3"
            android:id="@+id/iv_hot"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/hoti"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ViewFlipper
            app:layout_constraintVertical_bias="0.3"
            android:id="@+id/vf"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:autoStart="true"
            android:flipInterval="2500"
            android:inAnimation="@anim/anim_marquee_in"
            android:outAnimation="@anim/anim_marquee_out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ViewFlipper>

        <View
            android:id="@+id/view"
            android:layout_width="1.5dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@color/edit_hint_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_hot"
            app:layout_constraintTop_toTopOf="parent"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/edit_hint_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_hot"></View>
    </android.support.constraint.ConstraintLayout>


</layout>
